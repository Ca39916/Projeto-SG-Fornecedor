@model IEnumerable<ProjetoSGFornecedor.UI.WEB.ViewModels.CategoriaViewModel>
@{
    ViewData["Title"] = "Categoria";
}

<div class="text-center">
    <h1 class="display-4">Categoria</h1> 
    <br>    
    <input type="button" class="btn btn-outline-secondary" value="Nova Categoria" onclick="location.href='@Url.Action("NovaCategoria", "Categoria")'" /> @*Botão que leva pra tela de cadastro de novo funcionario*@
    <br>
     <br>
</div>
<table class="table table-striped table-hover">
    <tr>
        <th>
            ID da Categoria
        </th>
        <th>
            Active
        </th>
        <th>
            Nome
        </th>
        <th>
            InsertDate
        </th>
        <th>
            UpdateDate
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                <a asp-action="EditarCategoria" asp-controller="Categoria" asp-route-IdCategoria="@item.IdCategoria" class="btn btn-warning">Editar</a>
                <a asp-action="Detalhes" asp-controller="Categoria" asp-route-IdCategoria="@item.IdCategoria" class="btn btn-primary">Detalhes</a>
                <a asp-action="ConfirmarExcluir" asp-controller="Categoria" asp-route-IdCategoria="@item.IdCategoria" class="btn btn-danger">Excluir</a>
   
                @*@Html.ActionLink("Editar", "EditarCategoria", new { IdCategoria = item.IdCategoria }, new {@class = "label label-warning" }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { IdCategoria = item.IdCategoria }, new { @class = "label label-info" }) |
                @Html.ActionLink("Excluir", "ConfirmarExcluir", new { IdCategoria = item.IdCategoria }, new { @class = "glyphicon-trash" }) |*@
            </td>
        </tr>

    }
</table>

