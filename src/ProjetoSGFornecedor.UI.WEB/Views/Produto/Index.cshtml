@model IEnumerable<ProjetoSGFornecedor.UI.WEB.ViewModels.ProdutoViewModel>
@{
    ViewData["Title"] = "Produto";
}

<div class="text-center">
    <h1 class="display-4">Lista de Produtos</h1> 
    <br>    
    <input type="button" class="btn btn-outline-secondary" value="Novo Produto" onclick="location.href='@Url.Action("NovoProduto", "Produto")'" /> @*Botão que leva pra tela de cadastro de novo Produto*@
    <br>
     <br>
</div>
<table class="table table-striped table-hover">
    <tr>
        <th>
            ID do Produto
        </th>        
        <th>
            Nome/Produto
        </th>
        <th>
            Codigo/Barras
        </th>
        <th>
            Estoque
        </th>
        <th>
            Preço/Venda
        </th>
        <th>
            Preço/Compra
        </th>
        <th>
            InsertDate
        </th>
        <th>
            UpdateDate
        </th>
        <th>
            Active                                   
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProduto)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoBarras)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadeEstoque)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.PrecoCompra)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.PrecoVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-action="EditarProduto" asp-controller= "Produto" asp-route-IdProduto="@item.IdProduto" class="btn btn-warning">Editar</a>
                 <a asp-action="Detalhes" asp-controller="Produto" asp-route-IdProduto="@item.IdProduto" class="btn btn-primary">Detalhes</a>
                <a asp-action="ConfirmarExcluir" asp-controller="Produto" asp-route-IdProduto="@item.IdProduto" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
    }



</table>




























